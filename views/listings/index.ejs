      <img
        src="<%= listing.image.url%>"
        class="card-img-top"
        alt="Listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay">Like</div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title %></b><br />
          &#8377; <%= Number(listing.price).toLocaleString("en-IN") %> / Night
          <i class="tax_Info"> &nbsp; + 18 % GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
