<style>
  #parent-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
  }
  #filters-container {
    display: flex;
    width: 70%;
    overflow-x: auto;
    white-space: nowrap;
    padding-bottom: 10px;
  }
  #filters {
    display: inline-flex;
    align-items: center;
    width: 100%;
  }
  .filter_img {
    width: 30px;
    height: 30px;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.6;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  /* Button Filter Button Styling */
  button#prevBtn,
  button#nextBtn {
    border: none;
    background: none;
  }
  button#prevBtn img,
  button#nextBtn img {
    height: 30px;
    width: 30px;
  }
  .tax_Info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid rgb(45 36 36 / 30%);
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
  }
  /* Additional styling for scrollbar visibility */
  #filters-container::-webkit-scrollbar {
    height: 2px;
  }

  #filters-container::-webkit-scrollbar-thumb {
    background-color: #ccc;
    border-radius: 10px;
  }

  #filters-container::-webkit-scrollbar-track {
    background-color: #f1f1f1;
  }

  @media (max-width: 768px) {
    button#prevBtn,
    button#nextBtn {
      display: none;
    }
    #filters-container {
      width: 50%;
    }
    .tax-toggle {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding: 0.5rem;
      width: 40%;
    }

    .form-check-label {
      font-size: 0.8rem;
    }

    .form-check-input {
      margin-top: 0.5rem;
    }
  }
  @media (min-width: 768px) and (max-width: 1230px) {
    #parent-container,
    #filters-container {
      width: 100%;
    }
    .tax-toggle {
      display: none;
    }
  }
</style>
