<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create a New Listing</h3>
    <form action="/listings" method="POST" class="needs-validation" novalidate>
      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a Catchy title"
          required
          class="form-control"
        />
        <div class="valid-feedback">Title looks good.</div>
      </div>

      <div class="mb-2">
        <label for="description" class="form-label">Decription</label>
        <textarea
          name="listing[description]"
          placeholder="Enter Description"
          required
          class="form-control"
        ></textarea>
        <div class="invalid-feedback">Please enter a short description.</div>
      </div>

      <div class="mb-2">
        <label for="image" class="form-label">Image Link</label>
        <input
          type="text"
          name="listing[image]"
          placeholder="Enter Image URL/Link"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-2 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="1500"
            required
            class="form-control"
          />
          <div class="invalid-feedback">Price should be valid.</div>
        </div>

        <div class="mb-2 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="Jaipur, Rajsthan"
            required
            class="form-control"
          />
          <div class="invalid-feedback">Country name should be valid.</div>
        </div>
      </div>

      <div class="mb-2">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="India"
          required
          class="form-control"
        />
        <div class="invalid-feedback">Location should be valid.</div>
      </div>

      <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
  </div>
</div>
